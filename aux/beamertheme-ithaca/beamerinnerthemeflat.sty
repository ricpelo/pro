% Options  %
%%%%%%%%%%%%

\DeclareOptionBeamer{bullet}{\def\beamer@flat@bullet{#1}}
\ExecuteOptionsBeamer{bullet=circle}

\ProcessOptionsBeamer



%%%%%%%%%%%%%%
% Title page %
%%%%%%%%%%%%%%

\defbeamertemplate*{title page}{flat}[1][]
{\addtocounter{framenumber}{-1}
\begin{center}
\usebeamerfont{title}\inserttitle

\vfill

\large\insertauthor

\vfill

\Large\textcolor{normal text.fg!50!white}{\insertdate}
\vspace{1em}

\vfill

\includegraphics[width=0.2\textwidth]{logos/logo.png}

\vfill

{\scriptsize Generado el \today\ a las \currenttime}

\end{center}
}



%%%%%%%%%%%%%%
% Title page %
%%%%%%%%%%%%%%

\setbeamertemplate{section page}{
  \begin{center}
    \usebeamercolor[fg]{section title}
    \usebeamerfont{section title}
    \thesection.~\insertsectionhead\par
    \ifx\insertsubsectionhead\@empty\else
      \usebeamercolor[fg]{subsection title}
      \usebeamerfont{subsection title}
      \thesection.\thesubsection.~\insertsubsectionhead
    \fi
  \end{center}
}

\setbeamertemplate{subsection page}{
  \begin{center}
    \usebeamercolor[fg]{subsection title}
    \usebeamerfont{subsection title}
    \thesection.\thesubsection.~\insertsubsectionhead\par
  \end{center}
}



